<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">@color/orangePrimaryDark</item>
    </style>

    <style name="MainButtonToggleGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="bootstrapSize">md</item>
        <item name="roundedCorners">true</item>
        <item name="buttonMode">toggle</item>
    </style>

    <style name="MainToggleButton">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="MistakesButtonGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:text">BootstrapButtonGroup</item>
        <item name="bootstrapBrand">secondary</item>
        <item name="bootstrapSize">sm</item>
        <item name="roundedCorners">true</item>
        <item name="buttonMode">toggle</item>
    </style>

    <style name="redButtonGroup" parent="@style/MainButtonToggleGroup">
        <item name="bootstrapBrand">danger</item>
    </style>

    <style name="yellowButtonGroup" parent="@style/MainButtonToggleGroup">
        <item name="bootstrapBrand">warning</item>
    </style>

    <style name="greenButtonGroup"  parent="@style/MainButtonToggleGroup">
        <item name="bootstrapBrand">success</item>
    </style>

    <style name="blueButtonGroup"  parent="@style/MainButtonToggleGroup">
        <item name="bootstrapBrand">primary</item>
    </style>

</resources>
